<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    android:background="@drawable/corner12_border9a"
    android:paddingHorizontal="10dp"
    android:paddingVertical="16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvRepositoryname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Repository name"
        android:textColor="#001212"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvProgramminglanguage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-medium"
        android:text="Programming language"
        android:textColor="#3B3B3B"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/tvRepositoryname"
        app:layout_constraintTop_toBottomOf="@id/tvRepositoryname" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNumberStars"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-medium"
        android:text="Number of stars"
        android:textColor="#3B3B3B"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/tvProgramminglanguage"
        app:layout_constraintTop_toBottomOf="@id/tvProgramminglanguage" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvNumberForks"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="sans-serif-medium"
        android:text="Number of forks"
        android:textColor="#3B3B3B"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@id/tvNumberStars"
        app:layout_constraintTop_toBottomOf="@id/tvNumberStars" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:fontFamily="sans-serif"
        android:paddingEnd="5dp"
        android:text="nfsd aj fifnghnds refd ngvvgvjdsvhbhedb hveh cbuh erdc jgbvjcb wfdvj es hj ersvjebrskjnc83thdf 54rejvb ugvd sx u jn gjbutb "
        android:textColor="#707070"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tvNumberForks"
        app:layout_constraintTop_toBottomOf="@id/tvNumberForks" />


</androidx.constraintlayout.widget.ConstraintLayout>